<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/developer">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="30dp"
        app:cardElevation="30dp"
        android:padding="10dp"
        app:cardCornerRadius="20dp">

        <ImageButton
            android:id="@+id/linkein_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linkedinicon"
            android:layout_gravity="bottom|end"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/fui_transparent"
            android:translationZ="200dp"
            android:layout_marginBottom="10dp"
            android:focusable="true" />



        <ImageButton
            android:id="@+id/gmail_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gmail"
            android:layout_gravity="bottom|end"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/fui_transparent"
            android:layout_marginBottom="90dp"
            android:translationZ="200dp"
            android:focusable="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:cardCornerRadius="300dp"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              app:cardElevation="30dp"
              android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/developer_image"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/tanishqsehghal"
            android:cropToPadding="true" />
          </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvdeveloper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:textSize="24sp"
            android:padding="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/developer_image" />

        <TextView
            android:id="@+id/tvdeveloper_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/tvdeveloper_name"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>