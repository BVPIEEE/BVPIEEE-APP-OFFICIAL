<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chaptersLayout">

        <TextView
            android:id="@+id/chaptersHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Chapters"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="24sp" />

        <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
            android:id="@+id/chapterCoverflow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/divider"
            android:visibility="visible"
            coverflow:coverHeight="100dp"
            coverflow:coverWidth="150dp"
            coverflow:maxScaleFactor="1.5"
            coverflow:reflectionGap="0px"
            coverflow:rotationThreshold="0.5"
            coverflow:scalingThreshold="0.5"
            coverflow:spacing="0.6" />

        <View
            android:id="@+id/divider"
            android:layout_width="200dp"
            android:layout_alignStart="@id/chaptersHeading"
            android:layout_height="1dp"
            android:layout_below="@id/chaptersHeading"
            android:layout_marginEnd="-281dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chaptersLayout"
        android:id="@+id/sigsLayout">

        <TextView
            android:id="@+id/sigsHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGs"
            android:layout_margin="10dp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:textSize="24sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="200dp"
            android:layout_alignStart="@id/sigsHeading"
            android:layout_height="1dp"
            android:layout_below="@id/sigsHeading"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider" />

        <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
            android:id="@+id/sigsCoverflow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/divider2"
            android:visibility="visible"
            coverflow:coverHeight="100dp"
            coverflow:coverWidth="150dp"
            coverflow:maxScaleFactor="1.5"
            coverflow:reflectionGap="0px"
            coverflow:rotationThreshold="0.5"
            coverflow:scalingThreshold="0.5"
            coverflow:spacing="0.6" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sigsLayout"
        android:id="@+id/upcomingEventLayout">

        <TextView
            android:id="@+id/upcomingHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPCOMING EVENT"
            android:layout_margin="10dp"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:textSize="24sp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="200dp"
            android:layout_alignStart="@id/upcomingHeading"
            android:layout_height="1dp"
            android:layout_below="@id/upcomingHeading"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider" />

        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:id="@+id/easyflip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider3"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:isScrollContainer="true"
            app:flipDuration="400"
            app:flipEnabled="true"
            app:flipFrom="front"
            app:flipOnTouch="true"
            app:flipType="vertical">

            <!-- Back Layout Goes Here -->
            <include layout="@layout/flash_card_layout_back" />

            <!-- Front Layout Goes Here -->
            <include layout="@layout/flash_card_layout_front" />

        </com.wajahatkarim3.easyflipview.EasyFlipView>

    </RelativeLayout>

    </RelativeLayout>

</ScrollView>