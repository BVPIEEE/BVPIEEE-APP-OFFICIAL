<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/memberItem">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="30dp"
        android:padding="5dp"
        android:layout_margin="10dp"
        app:cardElevation="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
<!--            android:background="#FFFBE4">-->

            <ImageView
                android:id="@+id/img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_person_pin_24"
                android:contentDescription="@string/core_team_member_image" />

        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvnameCore"
            android:textColor="@color/black"
            android:textSize="24sp"/>

            <TextView
                android:id="@+id/corePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tvnameCore"
                android:text="@string/post"
                android:textColor="@color/black" />



            <!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/tap_to_know_more"-->
<!--                android:gravity="center|bottom"-->
<!--                android:padding="5dp"-->
<!--                android:textColor="@color/black"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:textAlignment="center"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="20dp">

            <ImageButton
                android:id="@+id/linkedin_img_btn"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_gravity="end"
                android:background="@color/white"
                android:src="@drawable/ic_website"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:id="@+id/corePost"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/post"-->
<!--                android:padding="5dp"-->
<!--                android:layout_marginStart="5dp"-->
<!--                android:textColor="@color/black"-->
<!--                />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tap_to_know_more"
                android:gravity="center|bottom"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textAlignment="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
