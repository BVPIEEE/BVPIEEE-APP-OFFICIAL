<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/memberItem"
    android:background="@color/fui_transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:padding="5dp"
        android:elevation="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <View
                android:id="@+id/ui_element_view"
                android:layout_width="10dp"
                android:layout_height="140dp"
                android:background="@color/BottleGreen"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#e0e0e0"
            android:layout_marginStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:id="@+id/tvnameCore"
                android:textColor="@color/black"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/corePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginEnd="80dp"
                android:text="@string/post"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/branchAndyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BRANCH AND YEAR"
                android:textColor="@color/black"
                android:padding="5dp" />

        </LinearLayout>
        <ImageButton
            android:id="@+id/linkedin_img_btn"
            android:layout_width="60dp"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:layout_height="75dp"
            android:outlineAmbientShadowColor="@color/BottomNavBg"
            android:outlineSpotShadowColor="@color/BottomNavBg"
            android:background="#e0e0e0"
            android:src="@drawable/linkedinicon"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>
