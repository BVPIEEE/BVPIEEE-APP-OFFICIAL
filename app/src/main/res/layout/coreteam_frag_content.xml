<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/memberItem">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="3dp"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:cardElevation="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/bvpieee"
                android:contentDescription="@string/core_team_member_image" />

        </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="115dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvnameCore"
            android:textColor="@color/black"
            android:textSize="32sp"/>

            <TextView
                android:id="@+id/corePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tvnameCore"
                android:text="@string/post"
                android:textColor="@color/black" />

            <!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/tap_to_know_more"-->
<!--                android:gravity="center|bottom"-->
<!--                android:padding="5dp"-->
<!--                android:textColor="@color/black"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:textAlignment="center"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:id="@+id/corePost"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/post"-->
<!--                android:padding="5dp"-->
<!--                android:layout_marginStart="5dp"-->
<!--                android:textColor="@color/black"-->
<!--                />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tap_to_know_more"
                android:gravity="center|bottom"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textAlignment="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
